<?xml version="1.0" encoding="utf-8" ?>
<odoo>
     <record id="action_overall_report_wiz" model="ir.actions.act_window">
        <field name="name">Overall Report Wizard</field>
        <field name="res_model">overall.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <record id="view_overall_report_wiz_form" model="ir.ui.view">
        <field name="name">view.overall.report.wiz.form</field>
        <field name="model">overall.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="driver_id"/>
                    <field name="fav_circuit"/>
                    <field name="date"/>
                    <field name="wins"/>
                </group>
                <footer>
                    <button name="html_method_wiz" type="object" string="HTML Report" class="btn-primary"/>
                    <button name="pdf_method_wiz" type="object" string="PDF Report" class="btn-warning"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>