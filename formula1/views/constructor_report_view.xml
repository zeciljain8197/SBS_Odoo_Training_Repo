<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Ex 8 Ques 4-->
    <record id="view_constructor_report_wiz_simple_form" model="ir.ui.view">
        <field name="name">view.constructor.report.simple.wiz.form</field>
        <field name="model">constructor.report.wizard.simple</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="driver_id"/>
                </group>
                <footer>
                    <button name="html_method_simple" type="object" string="HTML Report" class="btn-primary"/>
                    <button name="pdf_method_simple" type="object" string="PDF Report" class="btn-info"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_constructor_report_wiz_simple" model="ir.actions.act_window">
        <field name="name">Constructor Report Wizard</field>
        <field name="res_model">constructor.report.wizard.simple</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_constructor_report_wiz_form" model="ir.ui.view">
        <field name="name">view.constructor.report.wiz.form</field>
        <field name="model">constructor.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="driver_id"/>
                </group>
                <footer>
                    <button name="html_method" type="object" string="HTML Report" class="btn-primary"/>
                    <button name="pdf_method" type="object" string="PDF Report" class="success"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_constructor_report_wiz" model="ir.actions.act_window">
        <field name="name">Constructor Report Wizard</field>
        <field name="res_model">constructor.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_constructor_report_wiz" name="Constructor Report Wiz" parent="menu_reporting"
              action="action_constructor_report_wiz"/>

    <record id="action_constructor_report_wiz_simple" model="ir.actions.act_window">
        <field name="name">Constructor Report Wizard</field>
        <field name="res_model">constructor.report.wizard.simple</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>