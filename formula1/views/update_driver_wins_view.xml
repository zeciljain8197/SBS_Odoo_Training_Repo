<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_update_driver_wins_wiz_form" model="ir.ui.view">
        <field name="name">view.update.driver.wins.wiz.form</field>
        <field name="model">update.driver.wins</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="d_id"/>
                    <field name="d_wins"/>
                </group>
                <footer>
                    <button name="update_driver_wins" type="object" class="btn-primary" string="Update Driver Wins"/>
                    <button special="cancel" class="btn-danger" string="Close"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_update_driver_wins" model="ir.actions.act_window">
        <field name="name">Update Driver Wins</field>
        <field name="res_model">update.driver.wins</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_driver_wins" name="Update Driver Wins" action="action_update_driver_wins" parent="formula1.menu_wiz_main"/>
</odoo>