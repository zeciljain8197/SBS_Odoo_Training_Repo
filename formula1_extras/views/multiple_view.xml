<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_multiple_inheritance_form" model="ir.ui.view">
        <field name="name">view.multiple.inheritance.form</field>
        <field name="model">multiple.inheritance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group colspan="4" col="4">
                        <field name="fan_id"/>
                        <field name="fan_name"/>
                        <field name="constr"/>
                        <field name="fan_h"/>
                        <field name="fan_w"/>
                        <field name="fan_age"/>
                        <field name="c_name"/>
                        <field name="const_cost"/>
                        <field name="driver_id"/>
                        <field name="v_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_multiple_inheritance_tree" model="ir.ui.view">
        <field name="name">view.multiple.inheritance.tree</field>
        <field name="model">multiple.inheritance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="fan_id"/>
                <field name="fan_name"/>
                <field name="constr"/>
                <field name="fan_h"/>
                <field name="fan_w"/>
                <field name="fan_age"/>
                <field name="c_name"/>
                <field name="const_cost"/>
                <field name="driver_id"/>
                <field name="v_date"/>
            </tree>
        </field>
    </record>

    <record id="action_multiple_inheritance" model="ir.actions.act_window">
        <field name="name">Multiple Inheritance</field>
        <field name="res_model">multiple.inheritance</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_multiple" name="Fan Visit Info" parent="formula1.menu_fans_main"
              action="action_multiple_inheritance"/>
</odoo>