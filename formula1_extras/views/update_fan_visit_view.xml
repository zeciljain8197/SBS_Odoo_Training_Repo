<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_update_fan_visit_form" model="ir.ui.view">
        <field name="name">view.update.fan.visit.form</field>
        <field name="model">update.fan.visit</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="fan_id"/>
                    <field name="visited"/>
                    <field name="visit_review" attrs="{'invisible':[('visited','!=','av')]}"/>
                </group>
                <footer>
                    <button name="update_fan_visit" type="object" class="btn-primary" string="Update Fan Info"/>
                    <button special="cancel" class="btn-danger" string="Close"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_update_fan_visit" model="ir.actions.act_window">
        <field name="name">Update Fan Visit</field>
        <field name="res_model">update.fan.visit</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_update_fan_visit" name="Update Fan Visit Info" action="action_update_fan_visit" parent="formula1.menu_wiz_main"/>
</odoo>